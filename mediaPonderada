#include <stdio.h>

int main (){

float x,y,z,media;

scanf ("%f", x);
scanf ("%f", y);
scanf ("%f", z);

if (x > y && x > z) {

    media = (x * 5 + y * 2.5 + z * 2.5)/10
    printf("Media = %f", media);
}

else if (y > x && y > z) {

    media = (y * 5 + x * 2.5 + z * 2.5)/10
    printf("Media = %f", media);
}

else if (z > y && z > x) {

    media = (z * 5 + y * 2.5 + x * 2.5)/10
    printf("Media = %f", media);
}

return 0;

}
